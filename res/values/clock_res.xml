<?xml version="1.0" encoding="utf-8"?>

<resources>
    <attr name="clkstyle">
        <enum name="pointer" value="0" />
        <enum name="digit" value="1" />
    </attr>
    <declare-styleable name="WtClock">
        <attr name="clkstyle"/>
        <attr name="value_min" format="integer"/>
        <attr name="value_max" format="integer"/>
        
        <attr name="pointer_drawable" format="reference"/>
        <attr name="pointer_center_x" format="integer"/>
        <attr name="pointer_center_y" format="integer"/>
        <attr name="clk_min_angle" format="integer"/>
        <attr name="clk_max_angle" format="integer"/>
        
        <attr name="digitext_drawables" format="reference"/> 
        <attr name="digitext_size" format="integer"/>      
        <attr name="digitext_color" format="color"/>         
        <attr name="digitext_strokesize" format="integer"/> 
        <attr name="digitext_x" format="integer"/> 
        <attr name="digitext_y" format="integer"/>
        
    </declare-styleable>
    
    <declare-styleable name="AnalogClock">
        <attr name="dial" format="reference"/>
        <attr name="hand_hour" format="reference"/>
        <attr name="hand_minute" format="reference"/>
        <attr name="center_point" format="reference"/>
        <attr name="week_point_drawable" format="reference"/>
        <attr name="week_point_center_x" format="integer"/>
        <attr name="week_point_center_y" format="integer"/>
    </declare-styleable>
    <declare-styleable name="DigitalClock">
        <attr name="digit_drawables" format="reference"/>
        <attr name="digit_colon_drawable" format="reference"/>
        <attr name="date_text_color" format="reference|color"/>
    </declare-styleable>

    <array name="wt_clock_5_digit_drawables">
       <item>@drawable/wt_clock_5_digit_0</item>
       <item>@drawable/wt_clock_5_digit_1</item>
       <item>@drawable/wt_clock_5_digit_2</item>
       <item>@drawable/wt_clock_5_digit_3</item>
       <item>@drawable/wt_clock_5_digit_4</item>
       <item>@drawable/wt_clock_5_digit_5</item>
       <item>@drawable/wt_clock_5_digit_6</item>
       <item>@drawable/wt_clock_5_digit_7</item>
       <item>@drawable/wt_clock_5_digit_8</item>
       <item>@drawable/wt_clock_5_digit_9</item>
    </array>
